        </Content>
        <Compile Remove="UI\ConfigWindow.cs" />
        <Compile Remove="UI\DebugWindow.cs" />

        <!-- manifest file -->
        <Content Include="AetherBox.json">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </Content>
    </ItemGroup>
    <ItemGroup>
      <None Include="UI\ConfigWindow.cs" />
      <None Include="UI\DebugWindow.cs" />
    </ItemGroup>

    <!-- Package and Project References -->
    <ItemGroup>
        <!-- Package Reference -->
        <PackageReference Include="ClickLib" Version="1.2.0.1" />
        <PackageReference Include="Svg" Version="3.4.5" />

        <!-- Submodule Reference -->
        <ProjectReference Include="..\ECommons\ECommons\ECommons.csproj" />
    </ItemGroup>

